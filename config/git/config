# vim:filetype=gitconfig

[alias]
	a = add
	aa = add --all
	bd = branch --delete
	branches = branch -a
	c = commit
	cb = checkout -b
	cl = clone --recurse-submodulesal
    cleanup = "!git branch --merged | grep  -v '\\*\\|main\\|master\\|develop' | xargs -n 1 -r git branch -d"
	co = checkout
	count = shortlog --summary --numbered
	cp = cherrypick
	d = diff
	dev = "!f() { ghq get $1; }; f"
	fc = "!f() { git log --pretty=custom --date=short -S$1; }; f" # Find commits by source code
	fm = "!f() { git log --pretty=custom --date=short --grep=$1; }; f" # Find commits by commit message
	l = pull
	ls = log --graph --pretty=custom
	lsa = log --graph --pretty=custom --all
	lsla = log --pretty=custom --stat --graph --all
	lss = log --stat --pretty=custom --date=short
	nb = checkout -b
	oops = commit --amend --no-edit
	p = push
	pf = push --force-with-lease
	pristine = reset --hard && git clean --force -dx
	rb = rebase --interactive --autosquash
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	remotes = remote -v
	st = status
	st = status
	sta = "!f() { git stash push --all --include-untracked --message=$1; }; f" # Stash everything
	standup = log --since='yesterday' --author='Andrew Snelling'
	tags = tag -l # Show verbose output about tags, branches or remotes
	undo = reset --soft HEAD^1

[apply]
	whitespace = fix

[color "branch"]
	current = "#f7ca88 reverse"
	local = "#f7ca88"
	remote = "#a1b56c"

[color "diff"]
	frag = "#ba8baf bold"
	meta = "#f7ca88 bold"
	new = "#a1b56c bold"
	old = "#ab4642 bold"

[color "diff-highlight"]
	newHighlight = "#a1b56c bold 22"
	newNormal = "#a1b56c bold"
	oldHighlight = "#ab4642 bold 52"
	oldNormal = "#ab4642 bold"

[color "status"]
	added = "#a1b56c"
	changed = "#ab4642"
	untracked = "#86c1b9"

[color]
	diff = true
	ui = auto

[commit]
	template = ~/.config/git/gitcommit
	verbose = true

[core]
	editor = nvim
	excludesfile = ~/.config/git/gitignore_global
	hooksPath = ~/.config/git/hooks
	pager = delta

[delta "blame"]
	blame-code-style = syntax
	blame-format = {author:<15.14}
	blame-separator-style = "#ab4642"

[delta "decorations"]
	commit-decoration-style = "bold #f7ca88 box ul"
	commit-style = raw
	file-style = "bold #f7ca88 ul"
	hunk-header-decoration-style = "#7cafc2 box"
	hunk-header-file-style = "#ab4642"
	hunk-header-line-number-style = "#a1b56c"
	hunk-header-style = file line-number syntax

[delta "interactive"]
	keep-plus-minus-markers = false

[delta]
	features = unobtrusive-line-numbers decorations
	hyperlinks = true
	line-numbers = true
	map-styles = "bold #a16946" => "syntax #ba8baf", "bold #86c1b9" => "syntax #7cafc2"
	navigate = true
	side-by-side = true
	syntax-theme = base16

[diff]
	colorMoved = default
	submodule = log
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
	prompt = false

[ghq]
	root = ~/dev

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only --features=interactive

[merge]
	conflictstyle = diff3
	tool = nvimmerge

[mergetool "nvimmerge"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c '$wincmd w' -c 'wincmd J'"
	trustexitcode = true

[pager]
	status = true

[pretty]
	custom = %Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset

[pull]
	rebase = true

[push]
	default = current

[rebase]
	autoSquash = true
	autoStash = true
	instructionFormat = format:%s (%cr) <%an> %G?

[status]
	aheadBehind = true
	branch = true
	short = true
	showStash = true

[user]
	email = 72226000+snelling-a@users.noreply.github.com
	name = snelling-a

[includeIf "gitdir:~/work/"]
	path = ./gitconfig_local

